@using TheGuardiansEyesModel;
@model UsuarioModel

@{
    ViewData["Title"] = "Criar Novo Usu√°rio";
}

<h1 class="sgd-create-title">@ViewData["Title"]</h1>

@Html.ValidationSummary(true, "", new { @class = "sgd-validation-summary" })

<form asp-action="Create" method="post" class="sgd-create-form">
    <div class="sgd-form-group">
        <label asp-for="Nome" class="sgd-label"></label>
        <input asp-for="Nome" class="sgd-input" />
        <span asp-validation-for="Nome" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Sobrenome" class="sgd-label"></label>
        <input asp-for="Sobrenome" class="sgd-input" />
        <span asp-validation-for="Sobrenome" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Cpf" class="sgd-label"></label>
        <input asp-for="Cpf" class="sgd-input" />
        <span asp-validation-for="Cpf" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Cargo" class="sgd-label"></label>
        <input asp-for="Cargo" class="sgd-input" />
        <span asp-validation-for="Cargo" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Funcao" class="sgd-label"></label>
        <input asp-for="Funcao" class="sgd-input" />
        <span asp-validation-for="Funcao" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Email" class="sgd-label"></label>
        <input asp-for="Email" class="sgd-input" />
        <span asp-validation-for="Email" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Senha" class="sgd-label"></label>
        <input asp-for="Senha" type="password" class="sgd-input" />
        <span asp-validation-for="Senha" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-buttons">
        <button type="submit" class="sgd-btn-success">Salvar</button>
        <a href="/Usuario" class="sgd-btn-secondary">Voltar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
