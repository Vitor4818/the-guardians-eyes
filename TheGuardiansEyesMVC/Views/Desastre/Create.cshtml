@model TheGuardiansEyesModel.DesastreModel

@{
    ViewData["Title"] = "Criar Desastre";
}

<h1 class="sgd-create-title">@ViewData["Title"]</h1>

@Html.ValidationSummary(true, "", new { @class = "sgd-validation-summary" })

<form asp-action="Create" method="post" class="sgd-create-form">
    <div class="sgd-form-group">
        <label asp-for="IdLocal" class="sgd-label"></label>
        <input asp-for="IdLocal" class="sgd-input" />
        <span asp-validation-for="IdLocal" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="IdImpactoClassificacao" class="sgd-label"></label>
        <input asp-for="IdImpactoClassificacao" class="sgd-input" />
        <span asp-validation-for="IdImpactoClassificacao" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="IdGrupoDesastre" class="sgd-label"></label>
        <input asp-for="IdGrupoDesastre" class="sgd-input" />
        <span asp-validation-for="IdGrupoDesastre" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="IdUsuario" class="sgd-label"></label>
        <input asp-for="IdUsuario" class="sgd-input" />
        <span asp-validation-for="IdUsuario" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="Cobrade" class="sgd-label"></label>
        <input asp-for="Cobrade" class="sgd-input" />
        <span asp-validation-for="Cobrade" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-group">
        <label asp-for="DataOcorrencia" class="sgd-label"></label>
        <input asp-for="DataOcorrencia" class="sgd-input" />
        <span asp-validation-for="DataOcorrencia" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-form-buttons">
        <button type="submit" class="sgd-btn-success">Salvar</button>
        <a asp-action="Index" class="sgd-btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
