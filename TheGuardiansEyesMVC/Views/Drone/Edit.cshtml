@model TheGuardiansEyesModel.DroneModel

@{
    ViewData["Title"] = "Editar Drone";
}

<h1 class="sgd-edit-title">@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="sgd-validation-summary"></div>

<form asp-action="Edit" method="post" class="sgd-edit-form">
    <input type="hidden" asp-for="Id" />

    <div class="sgd-edit-group">
        <label asp-for="Fabricante" class="sgd-edit-label"></label>
        <input asp-for="Fabricante" class="sgd-edit-input" />
        <span asp-validation-for="Fabricante" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Modelo" class="sgd-edit-label"></label>
        <input asp-for="Modelo" class="sgd-edit-input" />
        <span asp-validation-for="Modelo" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="TempoVoo" class="sgd-edit-label"></label>
        <input asp-for="TempoVoo" class="sgd-edit-input" />
        <span asp-validation-for="TempoVoo" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="DistanciaMaxima" class="sgd-edit-label"></label>
        <input asp-for="DistanciaMaxima" class="sgd-edit-input" />
        <span asp-validation-for="DistanciaMaxima" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="VelocidadeMaxima" class="sgd-edit-label"></label>
        <input asp-for="VelocidadeMaxima" class="sgd-edit-input" />
        <span asp-validation-for="VelocidadeMaxima" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Camera" class="sgd-edit-label"></label>
        <input asp-for="Camera" class="sgd-edit-input" />
        <span asp-validation-for="Camera" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Peso" class="sgd-edit-label"></label>
        <input asp-for="Peso" class="sgd-edit-input" />
        <span asp-validation-for="Peso" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-buttons">
        <button type="submit" class="sgd-btn-submit">Salvar</button>
        <a asp-action="Index" class="sgd-btn-cancel">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
