@model TheGuardiansEyesModel.DroneModel

@{
    ViewData["Title"] = "Excluir Drone";
}

<h1 class="sgd-delete-title">@ViewData["Title"]</h1>

<h3 class="sgd-delete-warning">Tem certeza de que deseja excluir este drone?</h3>

<div class="sgd-delete-container">
    <h4 class="sgd-delete-subtitle">Drone</h4>
    <hr class="sgd-delete-hr" />
    <dl class="sgd-delete-list">
        <dt class="sgd-delete-term">Fabricante</dt>
        <dd class="sgd-delete-desc">@Model.Fabricante</dd>

        <dt class="sgd-delete-term">Modelo</dt>
        <dd class="sgd-delete-desc">@Model.Modelo</dd>

        <dt class="sgd-delete-term">Tempo de Voo</dt>
        <dd class="sgd-delete-desc">@Model.TempoVoo</dd>

        <dt class="sgd-delete-term">Dist칙ncia M치xima</dt>
        <dd class="sgd-delete-desc">@Model.DistanciaMaxima</dd>

        <dt class="sgd-delete-term">Velocidade M치xima</dt>
        <dd class="sgd-delete-desc">@Model.VelocidadeMaxima</dd>

        <dt class="sgd-delete-term">C칙mera</dt>
        <dd class="sgd-delete-desc">@Model.Camera</dd>

        <dt class="sgd-delete-term">Peso</dt>
        <dd class="sgd-delete-desc">@Model.Peso</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="sgd-delete-form">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="sgd-btn-danger">Excluir</button>
    <a asp-action="Index" class="sgd-btn-secondary">Cancelar</a>
</form>
