@model IEnumerable<TheGuardiansEyesMVC.Models.Responses.SubGrupoDesastreResponse>

@{
    ViewData["Title"] = "Lista de SubGrupos de Desastre";
}

<h1 class="sgd-title">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="sgd-create-btn">Criar Novo SubGrupo</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="sgd-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subgrupo</th>
                <th>Tipo</th>
                <th>SubTipo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Subgrupo</td>
                    <td>@item.Tipo</td>
                    <td>@item.SubTipo</td>
                    <td class="sgd-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="sgd-link">Detalhes</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id" class="sgd-link">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="sgd-link sgd-delete-link">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="sgd-alert-warning">
        Nenhum subgrupo de desastre cadastrado no momento.
    </div>
}
