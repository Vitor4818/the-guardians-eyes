@model TheGuardiansEyesModel.SensoresModel

@{
    ViewData["Title"] = "Editar Sensor";
}

<h1 class="sgd-edit-title">@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="sgd-validation-summary"></div>

<form asp-action="Edit" method="post" class="sgd-edit-form">
    <input type="hidden" asp-for="Id" />

    <div class="sgd-edit-group">
        <label asp-for="Chip" class="sgd-edit-label"></label>
        <input asp-for="Chip" class="sgd-edit-input" />
        <span asp-validation-for="Chip" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Modelo" class="sgd-edit-label"></label>
        <input asp-for="Modelo" class="sgd-edit-input" />
        <span asp-validation-for="Modelo" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Interface" class="sgd-edit-label"></label>
        <input asp-for="Interface" class="sgd-edit-input" />
        <span asp-validation-for="Interface" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Utilidade" class="sgd-edit-label"></label>
        <input asp-for="Utilidade" class="sgd-edit-input" />
        <span asp-validation-for="Utilidade" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Fabricante" class="sgd-edit-label"></label>
        <input asp-for="Fabricante" class="sgd-edit-input" />
        <span asp-validation-for="Fabricante" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Estado" class="sgd-edit-label"></label>
        <input asp-for="Estado" class="sgd-edit-input" />
        <span asp-validation-for="Estado" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="Saida" class="sgd-edit-label"></label>
        <input asp-for="Saida" class="sgd-edit-input" />
        <span asp-validation-for="Saida" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="TipoSaida" class="sgd-edit-label"></label>
        <input asp-for="TipoSaida" class="sgd-edit-input" />
        <span asp-validation-for="TipoSaida" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-group">
        <label asp-for="MediaTensaoRegistrada" class="sgd-edit-label"></label>
        <input asp-for="MediaTensaoRegistrada" class="sgd-edit-input" />
        <span asp-validation-for="MediaTensaoRegistrada" class="sgd-validation-error"></span>
    </div>

    <div class="sgd-edit-buttons">
        <button type="submit" class="sgd-btn-submit">Atualizar</button>
        <a asp-action="Index" class="sgd-btn-cancel">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
