@model TheGuardiansEyesModel.SensoresModel

@{
    ViewData["Title"] = "Cadastrar Sensor";
}

<h2 class="titulo-pagina">Cadastrar Novo Sensor</h2>

<div class="container-formulario">
    <form asp-action="Create" method="post" class="formulario" novalidate>
        <div class="campo-formulario">
            <label asp-for="Chip" class="label"></label>
            <input asp-for="Chip" class="input" />
            <span asp-validation-for="Chip" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Modelo" class="label"></label>
            <input asp-for="Modelo" class="input" />
            <span asp-validation-for="Modelo" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Interface" class="label"></label>
            <input asp-for="Interface" class="input" />
            <span asp-validation-for="Interface" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Utilidade" class="label"></label>
            <input asp-for="Utilidade" class="input" />
            <span asp-validation-for="Utilidade" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Fabricante" class="label"></label>
            <input asp-for="Fabricante" class="input" />
            <span asp-validation-for="Fabricante" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Estado" class="label"></label>
            <input asp-for="Estado" class="input" />
            <span asp-validation-for="Estado" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="Saida" class="label"></label>
            <input asp-for="Saida" class="input" />
            <span asp-validation-for="Saida" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="TipoSaida" class="label"></label>
            <input asp-for="TipoSaida" class="input" />
            <span asp-validation-for="TipoSaida" class="erro-validacao"></span>
        </div>

        <div class="campo-formulario">
            <label asp-for="MediaTensaoRegistrada" class="label"></label>
            <input asp-for="MediaTensaoRegistrada" class="input" type="number" step="0.01" />
            <span asp-validation-for="MediaTensaoRegistrada" class="erro-validacao"></span>
        </div>

        <div class="botoes">
            <button type="submit" class="botao primario">Cadastrar</button>
            <a asp-action="Index" class="botao secundario">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
